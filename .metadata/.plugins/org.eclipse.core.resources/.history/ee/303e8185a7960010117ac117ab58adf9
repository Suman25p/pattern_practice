package pattern;

public class Centered_Alphabet_Pyramid {
	public static void main(String[] args) {
		pyramid2(5);
	}
	
	public static void pyramid2(int n) {
		char ch = 'A';
        for (int i = 1; i <= n; i++){
            for (int j = 1; j <= n-i; j++){
                System.out.print(" ");
            }
            for (int k = 1; k <= i; k++){
                System.out.print(ch + " ");
            }
            System.out.println();
            ch++;
        }
	}
}

package pattern;

public class Alphabet_Pyramid {
	public static void main(String[] args) {
		pyramid(5);
	}
	public static void pyramid(int n) {
		char ch = 'A';
        for (int i = 1; i <= n; i++){
            for (int j = 1; j <= n-i; j++){
                System.out.print(" ");
            }
            for (int k = 1; k <= 2*i-1; k++){
                System.out.print(ch);
            }
            System.out.println();
            ch++;
        }
	}
}
